# Example .env file for BeZhas SDK Examples

# ============================================================================
# API CONFIGURATION
# ============================================================================

# BeZhas API URL
BEZHAS_API_URL=https://api.bezhas.com

# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-bor.publicnode.com

# MCP Server URL (for AI tools)
MCP_SERVER_URL=http://localhost:3002

# ============================================================================
# AUTHENTICATION (Optional)
# ============================================================================

# BeZhas API Key (get from https://app.bezhas.com/settings/api)
BEZHAS_API_KEY=your_api_key_here

# ============================================================================
# WALLET CONFIGURATION (Required for staking and RWA examples)
# ============================================================================

# Private key for signing transactions
# IMPORTANT: Never commit this file with real private keys!
# Use a test wallet with small amounts for examples
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ============================================================================
# CONTRACT ADDRESSES (Polygon Mainnet)
# ============================================================================

BEZCOIN_ADDRESS=0xEcBa873B534C54DE2B62acDE232ADCa4369f11A8
LIQUIDITY_FARMING_ADDRESS=0x4C5330B45FEa670d5ffEAD418E74dB7EA5ECdD26
RWA_FACTORY=0x5F999157aF1DEfBf4E7e1b8021850b49e458CCc0
GOVERNANCE_ADDRESS=0x304Fd77f64C03482edcec0923f0Cd4A066a305F3

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Network (polygon or amoy for testnet)
NETWORK=polygon

# Chain ID (137 for Polygon Mainnet, 80002 for Amoy Testnet)
CHAIN_ID=137
