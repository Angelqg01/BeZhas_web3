# ============================================
# BeZhas Frontend - Dockerfile para GCP Cloud Run
# ============================================

# Stage 1: Builder
FROM node:20-alpine AS builder

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm@9

# Copiar archivos de dependencias del frontend
COPY frontend/package.json frontend/pnpm-lock.yaml* ./

# Instalar dependencias (sin frozen-lockfile para mayor compatibilidad)
RUN pnpm install --no-frozen-lockfile

# Copiar código fuente del frontend
COPY frontend/ .

# Copiar SDK para el alias @sdk
COPY sdk/ /sdk/

# Build arguments para variables de entorno en tiempo de build
ARG VITE_API_URL=https://api.bezhas.com
ARG VITE_WS_URL=wss://api.bezhas.com
ARG VITE_WALLET_CONNECT_PROJECT_ID
ARG VITE_STRIPE_PUBLIC_KEY
ARG VITE_POLYGON_CHAIN_ID=137
ARG VITE_BEZCOIN_CONTRACT_ADDRESS=0xEcBa873B534C54DE2B62acDE232ADCa4369f11A8
ARG VITE_GOOGLE_CLIENT_ID
ARG VITE_GITHUB_CLIENT_ID

# Establecer variables de entorno para el build
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_WS_URL=$VITE_WS_URL
ENV VITE_WALLET_CONNECT_PROJECT_ID=$VITE_WALLET_CONNECT_PROJECT_ID
ENV VITE_STRIPE_PUBLIC_KEY=$VITE_STRIPE_PUBLIC_KEY
ENV VITE_POLYGON_CHAIN_ID=$VITE_POLYGON_CHAIN_ID
ENV VITE_BEZCOIN_CONTRACT_ADDRESS=$VITE_BEZCOIN_CONTRACT_ADDRESS
ENV VITE_GOOGLE_CLIENT_ID=$VITE_GOOGLE_CLIENT_ID
ENV VITE_GITHUB_CLIENT_ID=$VITE_GITHUB_CLIENT_ID

# Build de producción
RUN pnpm run build

# ============================================
# Stage 2: Production con Nginx
# ============================================
FROM nginx:alpine

# Instalar wget para health checks
RUN apk add --no-cache wget

# Copiar configuración personalizada de nginx (desde el contexto root)
COPY frontend/nginx.conf /etc/nginx/conf.d/default.conf

# Copiar archivos del build
COPY --from=builder /app/dist /usr/share/nginx/html

# Crear archivo de health check
RUN echo "OK" > /usr/share/nginx/html/health

# Exponer puerto
EXPOSE 80

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:80/health || exit 1

# Comando de inicio
CMD ["nginx", "-g", "daemon off;"]
