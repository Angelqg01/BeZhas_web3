DATADOG_API_KEY=your_datadog_key

# ============================================================================
# üîí SECURITY HEADERS
# ============================================================================
HELMET_CSP_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# üí≥ PAYMENT GATEWAYS (Optional)
# ============================================================================
