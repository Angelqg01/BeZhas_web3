# ============================================================================
# üîê SECURITY - PRODUCTION SECRETS
# ============================================================================
JWT_SECRET=CHANGE_THIS_TO_UNIQUE_RANDOM_32_CHAR_STRING_OR_MORE
ADMIN_TOKEN=CHANGE_THIS_TO_UNIQUE_ADMIN_SECRET_TOKEN
AUTH_BYPASS_ENABLED=false
JWT_DEV_MODE=false

# ============================================================================
# üåê SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=3001
CHAT_SERVER_PORT=3002
LOG_LEVEL=info

# ============================================================================
# üîó CORS & API
# ============================================================================
CORS_ORIGINS=https://bezhas.com,https://www.bezhas.com
API_URL=https://api.bezhas.com

# ============================================================================
# üíæ REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=redis.bezhas.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
ENABLE_REDIS_ADAPTER=true
CREDIT_CACHE_TTL=60

# ============================================================================
# üîó BLOCKCHAIN CONFIGURATION
# ============================================================================
BLOCKCHAIN_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY
BEZ_COIN_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
POLYGON_RPC_URL=https://polygon-rpc.com

# ============================================================================
# üí¨ CHAT CONFIGURATION
# ============================================================================
WORDS_PER_CREDIT=1000
ENABLE_CREDIT_AUDIT=true
CREDIT_SERVICE_URL=https://api.bezhas.com/api/credits
MAX_MESSAGE_LENGTH=5000
MAX_ROOM_SIZE=100
CONNECTION_RATE_LIMIT=10
CONNECTION_RATE_WINDOW=60000

# ============================================================================
# ü§ñ AI PROVIDERS (Optional - Configure as needed)
