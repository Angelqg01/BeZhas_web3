ENABLE_FARMING=true
ENABLE_DAO=true
ENABLE_CHAT=true
ENABLE_AI_AGENTS=true
ENABLE_NFT_MARKETPLACE=true

# ============================================================================
# üìä DATABASE (MongoDB)
# ============================================================================
