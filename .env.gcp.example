# ===================================================
# BeZhas Production Environment Variables Template
# ===================================================
# Copy this file to .env.production and fill in values
# NEVER commit .env.production to version control
# ===================================================

# ===== Node Environment =====
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# ===== MongoDB =====
MONGO_ROOT_USER=bezhas_admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_USER=bezhas_app
MONGO_PASSWORD=your_secure_app_password_here
MONGODB_URI=mongodb://bezhas_app:password@mongo:27017/bezhas?authSource=admin

# ===== Redis =====
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_URL=redis://:password@redis:6379

# ===== JWT Authentication =====
JWT_SECRET=your_very_long_and_secure_jwt_secret_minimum_32_characters

# ===== Stripe Payments =====
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===== Blockchain RPC =====
# Polygon Mainnet
RPC_URL=https://polygon-rpc.com
# Alternative: Alchemy/Infura endpoints
# RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_api_key

# ===== Contract Addresses (Polygon Mainnet) =====
BEZ_TOKEN_ADDRESS=0x...
NFT_CONTRACT_ADDRESS=0x...
QUALITY_ORACLE_ADDRESS=0x...
MARKETPLACE_ADDRESS=0x...
LIQUIDITY_FARMING_ADDRESS=0x...

# ===== Hot Wallet (for automated transfers) =====
# WARNING: Store private keys in Secret Manager, not here
HOT_WALLET_ADDRESS=0x...
# HOT_WALLET_PRIVATE_KEY should be in Secret Manager

# ===== AI Services =====
OPENAI_API_KEY=sk-your_openai_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# ===== Frontend URLs =====
FRONTEND_URL=https://bezhas.com
VITE_API_URL=https://api.bezhas.com
VITE_WS_URL=wss://api.bezhas.com

# ===== Blockchain Network =====
VITE_CHAIN_ID=137
VITE_NETWORK=polygon

# ===== OAuth Providers =====
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===== Notification Services =====
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_webhook

# ===== IPFS / Storage =====
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/

# ===== PostgreSQL (Analytics) =====
POSTGRES_USER=bezhas
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=bezhas_analytics

# ===== Monitoring =====
GRAFANA_PASSWORD=your_grafana_password
PROMETHEUS_URL=http://prometheus:9090

# ===== Rate Limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Security =====
CORS_ORIGIN=https://bezhas.com,https://www.bezhas.com
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=your_32_character_encryption_key_

# ===== GCP Specific =====
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
