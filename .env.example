# BeZhas Web3 Environment Configuration
# ============================================================================
# IMPORTANTE: Este es un archivo de EJEMPLO. Copia este archivo como .env
# y rellena con tus valores reales. NUNCA subas el archivo .env a GitHub.
# ============================================================================

# ============================================================================
# BASE DE DATOS - CRÍTICO
# ============================================================================
# Elige UNA de las siguientes opciones según tu configuración:

# Opción 1: MongoDB Local (Desarrollo)
DATABASE_URL="mongodb://localhost:27017/bezhas"

# Opción 2: MongoDB Atlas (Cloud)
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/bezhas?retryWrites=true&w=majority"

# Opción 3: PostgreSQL Local (Desarrollo)
# DATABASE_URL="postgresql://postgres:password@localhost:5432/bezhas"

# Opción 4: GCP Cloud SQL (Producción)
# DATABASE_URL="postgresql://user:password@/dbname?host=/cloudsql/project-id:region:instance-name"

# ============================================================================
# SERVIDOR Y ENTORNO
# ============================================================================
PORT=3001
NODE_ENV="development"  # development | production | test
LOG_LEVEL="info"        # debug | info | warn | error

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
# URL del frontend para redirects de Stripe y CORS
FRONTEND_URL="http://localhost:5173"  # Desarrollo
# FRONTEND_URL="https://bezhas.com"   # Producción

# URL de la API para el frontend
REACT_APP_API_URL="http://localhost:3001"
REACT_APP_ENVIRONMENT="development"

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Orígenes permitidos separados por comas
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:5174"
# En producción, agregar: https://bezhas.com,https://www.bezhas.com

# ============================================================================
# SEGURIDAD Y AUTENTICACIÓN
# ============================================================================
# Secreto para JWT (mínimo 32 caracteres)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"

# Secreto para sesiones
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Wallet del administrador (tu wallet principal)
ADMIN_WALLET_ADDRESS="0x52Df82920CBAE522880dD7657e43d1A754eD044E"

# ============================================================================
# WEB3 Y BLOCKCHAIN
# ============================================================================
# Clave privada para transacciones (Hot Wallet)
# ⚠️ NUNCA uses tu wallet principal aquí, solo un hot wallet con fondos limitados
PRIVATE_KEY="your-hot-wallet-private-key-64-characters"
HOT_WALLET_PRIVATE_KEY="your-hot-wallet-private-key-64-characters"

# Network Configuration
DEPLOYMENT_NETWORK="polygon"
CHAIN_ID=137

# RPC URLs
POLYGON_RPC_URL="https://polygon-bor.publicnode.com"
POLYGON_MAINNET_RPC="https://polygon-bor.publicnode.com"
POLYGON_AMOY_RPC="https://rpc-amoy.polygon.technology"
SEPOLIA_RPC_URL="https://ethereum-sepolia-rpc.publicnode.com"
MAINNET_RPC_URL="https://eth.llamarpc.com"

# API Keys para Blockchain Explorers
ETHERSCAN_API_KEY="your-etherscan-api-key"
POLYGONSCAN_API_KEY="your-polygonscan-api-key"

